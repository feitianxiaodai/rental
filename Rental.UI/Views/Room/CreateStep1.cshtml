            var initPosition = new google.maps.LatLng(24.987356, 121.3271635);
            var mapOptions = {
                zoom: 9,
                center: initPosition
            }
            map = new google.maps.Map(document.getElementById('place-map-container'),
                mapOptions);
            var marker = new google.maps.Marker({
                position: initPosition,
                map: map,
                title: '坐标'
            });
            markers.push(marker);
        }
        google.maps.event.addDomListener(window, 'load', initialize);

        function setAllMap(map) {
            for (var i = 0; i < markers.length; i++) {
                markers[i].setMap(map);
            }
        }

        $(function () {
            initCity();
            $('#sel-city').change(function () {
                var latitude = $(this).find("option:selected").attr("data-latitude");
                var longitude = $(this).find("option:selected").attr("data-longitude");
                var areaId = $(this).find("option:selected").attr("data-id");
                //map.centerAndZoom(cityPoint, 15)
                //map.setCurrentCity("高雄");
                //map.addOverlay(new BMap.Marker(cityPoint));
                
                var position = new google.maps.LatLng(24.987356, 121.5271635);
                var mapOptions = {
                    zoom: 9,
                    center: position
                }
                map = new google.maps.Map(document.getElementById('place-map-container'),
                    mapOptions);
                var marker = new google.maps.Marker({
                    position: position,
                    map: map,
                    title: '坐标'
                });
                markers.push(marker);


                //初始化区
                initArea(areaId);
            });

            $('#sel-area').change(function () {
                var latitude = $(this).find("option:selected").attr("data-latitude");
                var longitude = $(this).find("option:selected").attr("data-longitude");
                
                setAllMap(null);
                var position = new google.maps.LatLng(latitude, longitude);
                var mapOptions = {
                    zoom: 17,
                    center: position
                }
                map = new google.maps.Map(document.getElementById('place-map-container'),
                    mapOptions);
                var marker = new google.maps.Marker({
                    position: position,
                    map: map,
                    draggable: true,
                    title: '坐标'
                });
                //获得拖拉的坐标
                google.maps.event.addListener(marker, 'dragend', function () {
                    var loc = marker.getPosition();
                    $('#AreaLong').val(loc.lng());
                    $('#AreaLang').val(loc.lat());
                });
