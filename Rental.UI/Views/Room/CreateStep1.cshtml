                        }
                        $('#sel-city').append(area);
                    }
                }
            });
        }

        function initArea(id) {
            var area = '';
            $.ajax({
                url: '@Url.Action("_AjaxGetArea")',
                type: 'POST',
                data: { Id: id },
                success: function (data) {
                    if (data != '') {
                        $('#sel-area').empty();
