@using Rental.UI.Utility
@model List<Rental.Service.domain.RoomModel>
@{
    var title = Html.GetLanguageByKey("IndexRoomName");
    ViewBag.Title = Html.GetLanguageByKey("RoomPrivew");
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section breadUrl{
    <a class="tracks active" href="@Url.Action("Index","Home")">@Html.GetLanguageByKey("IndexPageName")</a>
    <a class="tracks active" href="javascript:void(0)">@Html.GetLanguageByKey("TaiWan")</a>
    <a class="tracks show" href="@Url.Action("Room")">@Html.GetLanguageByKey("RoomPrivew")</a><span class="tracks">@Html.GetLanguageByKey("Room")</span>
}

<div class="hotel-details">
    <div class="comtemplate">
        @{
            if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    var imgUrl = item.RoomImageInfo.FirstOrDefault().ImgUrl;
                    
                    <div class="comtemplate-panel" data-id="142" style="width:553px;">
                        <a href="@Url.Action("RoomPreview", new { id=@item.Id})" class="">
                            <img class="comtemplate-panel-img imgauto"
                                 src="@imgUrl"
                                 data-small-src="@imgUrl"
                                 data-big-src="@imgUrl"
                                 data-ratio="0.618" alt="">
                            <h2 class="comtemplate-panel-cap">@item.RoomName</h2>
                        </a>
                        <p class="comtemplate-panel-intro">@item.RoomName</p>
                    </div>
                }
            }
            else
            {
                var tip = Html.GetLanguageByKey("NoResource");
                <div>@tip</div>
            }
        }

    </div>
</div>
@section scripts{
    <script>
        if (/AppleWebKit.*Mobile/i.test(navigator.userAgent) || (/MIDP|SymbianOS|NOKIA|SAMSUNG|LG|NEC|TCL|Alcatel|BIRD|DBTEL|Dopod|PHILIPS|HAIER|LENOVO|MOT-|Nokia|SonyEricsson|SIE-|Amoi|ZTE/.test(navigator.userAgent))) {
            if (window.location.href.indexOf("?mobile") < 0) {
                try {
                    if (/Android|webOS|iPhone|iPod|BlackBerry/i.test(navigator.userAgent)) {
                        window.location.href = "@Url.Action("RoomListPhone","Home")";
                    } else if (/iPad/i.test(navigator.userAgent)) {
                    } else {
                    }
                } catch (e) { }
            }
        }


        $(function () {
            $('.index-li a').removeClass('active');
            $('.introduce-li a').removeClass('active');
            $('.arrive-li a').removeClass('active');
            $('.yh-li a').removeClass('active');
            $('.food-li a').removeClass('active');
            $('.service-li a').removeClass('active');
            $('.room-li a').addClass('active');
        });
    </script>
}
